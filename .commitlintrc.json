{
	"extends": ["@commitlint/config-conventional"],
	"rules": {
		"scope-case": [2, "always", ["lower-case", "camel-case", "pascal-case"]],
		"type-enum": [
			2,
			"always",
			[
				"post",
				"feat",
				"build",
				"chore",
				"ci",
				"docs",
				"fix",
				"refactor",
				"revert",
				"style",
				"test"
			]
		]
	}
}
